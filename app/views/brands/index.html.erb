
<div class="content-header">
  <div class="container-fluid">
      <% if(notice)%>
    <div class="alert alert-info" role="alert">
      <%= notice %>
    </div>
    <% end%>
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Brands</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
             
       <p class="alert"><%= alert %></p>
           <div class="col-4">
              <%= link_to 'New Brand', new_brand_path ,class:"btn btn-primary btn-block"%>
          </div>
          <div class="card-body">
            <table class="table table-striped">
  <thead>
    <tr>
      <th >#</th>
      <th >Category Name</th>
      <th  colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
<% @brands.each do |brand| %>
    <tr>
      <td><%= brand.id %></td>
      <td><%= brand.name %></td>
        <td><% link_to 'Show', brand ,class:"btn btn-primary btn-block" %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) ,class:"btn btn-primary btn-block" %></td>
        <td><%= link_to 'Destroy', brand,class:"btn btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
       <% end %>
  </tbody>
</table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
