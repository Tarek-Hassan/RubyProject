
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"> Product Details</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
             <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
          <div class="card-body">
<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

   <% if(@product.images.attached?) %>
     <strong>Image:</strong>
    <div class="card-deck my-2 float-right" >
      <%@product.images.each do |pic| %>
      <div class="card mx-2">
        <%=  image_tag pic ,width:"100" ,height:"100"%>
      </div>
      <% end %>
    </div>
    <% end %>
    <br/>
    <br/>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>In stock:</strong>
  <%= @product.in_Stock %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand_id %>
</p>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
