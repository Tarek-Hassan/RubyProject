
  <% if product.errors.any? %>
<div class="alert alert-danger" role="alert">
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="card-body">

<%= form_with(model: product, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title ,class:"form-control",placeholder:"Title"%>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description ,class:"form-control",placeholder:"Description"%>
  </div>

  <div class="form-group">
    <% if(@product.images.attached?) %>
    <div class="card-deck my-2 float-right" width="460" height="345">
      <%@product.images.each do |pic| %>
      <div class="card mx-2">
        <%=  image_tag pic ,width:"100" ,height:"100"%>
      </div>
      <% end %>
    </div>
    <% end %>
    <%= form.label :images %>
    <%= form.file_field :images ,multiple: true ,direct_upload: true,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price,class:"form-control",placeholder:"Price" %>
  </div>

  <div class="form-group">
    <%= form.label :in_Stock %>
    <%= form.number_field :in_Stock ,class:"form-control",placeholder:"in_Stock"%>
  </div>

  <div class="form-group">
      <% cities_array = @categories .map { |category| [category.name, category.id] } %>
      <%= form.label :category_id %>
      <%= form.select :category_id ,options_for_select( cities_array , product.brand_id),{},{class:"form-control"}%>
  </div>
  
  <div class="form-group">
      <% cities_array = @brands .map { |brand| [brand.name, brand.id] } %>
      <%= form.label :brand_id %>
      <%= form.select :brand_id,options_for_select(cities_array,product.brand_id),{},{class:"form-control"} %>
  </div>

  <div class="col-4">
    <%= form.submit class:"btn btn-primary btn-block" %>
  </div>
</div>
<% end %>