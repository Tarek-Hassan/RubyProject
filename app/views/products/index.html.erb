<div class="content-header">
  <div class="container-fluid">
    <% if(notice)%>
    <div class="alert alert-info" role="alert">
      <%= notice %>
    </div>
    <% end%>
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Products</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
       <p class="alert"><%= alert %></p>
           <div class="col-4">
<%= link_to 'New Product', new_product_path ,class:"btn btn-primary btn-block"%>
          </div>
          <div class="card-body">
            <table class="table table-striped">
  <thead>
    <tr>
      <th >#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Number  Of Images</th>
      <th>Price</th>
      <th>In stock</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  
   <% @products.each do |product| %>
    <tr>
      <td ><%= product.id %></td>
      <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.images.count %></td>
        <td><%= product.price %></td>
        <td><%= product.in_Stock %></td>
        <td><%= product.category.name %></td>
        <td><%= product.brand.name %></td>
  <td><%= link_to 'Show', product ,class:"btn btn-primary btn-block"%></td>
        <td><%= link_to 'Edit', edit_product_path(product) ,class:"btn btn-primary btn-block"%></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-block" %></td>
    </tr>
       <% end %>
  </tbody>
</table>


          </div>
        </div>
      </div>
    </div>
  </div>
</section>
