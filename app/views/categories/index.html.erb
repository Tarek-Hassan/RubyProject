
<div class="content-header">
  <div class="container-fluid">
      <% if(notice)%>
    <div class="alert alert-info" role="alert">
      <%= notice %>
    </div>
    <% end%>
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Categories</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
             
       <p class="alert"><%= alert %></p>
           <div class="col-4">
              <%= link_to 'New Category', new_category_path ,class:"btn btn-primary btn-block"%>
          </div>
          <div class="card-body">
            <table class="table table-striped">
  <thead>
    <tr>
      <th >#</th>
      <th >Category Name</th>
      <th  colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
        <td><% link_to 'Show', category ,class:"btn btn-primary btn-block" %></td>
        <td><%= link_to 'Edit', edit_category_path(category) ,class:"btn btn-primary btn-block" %></td>
        <td><%= link_to 'Destroy', category,class:"btn btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
       <% end %>
  </tbody>
</table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
