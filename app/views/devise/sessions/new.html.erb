<p class="login-box-msg"> Sign in</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="input-group mb-3">

  <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control m-input" ,placeholder:"Email" %>

  <div class="input-group-append">
    <div class="input-group-text">
      <span class="fas fa-envelope"></span>
    </div>
  </div>
</div>

<div class="input-group mb-3">

  <%= f.password_field :password, autocomplete: "new-password" , class:"form-control m-input" ,placeholder:"Password" %>
  <div class="input-group-append">
    <div class="input-group-text">
      <span class="fas fa-lock"></span>
    </div>
  </div>
</div>



 <div class="col-4">
  <%= f.submit "Sign in",class:"btn btn-primary btn-block"%>
</div>
<% end %>
<%= link_to 'Sign Up', new_user_registration_path, class:"text-center" %>  
